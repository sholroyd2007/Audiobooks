<header class="navigation fixed-top" >
    <div class="container">
        <nav class="navbar navbar-expand-lg navbar-light">
            <button class="navbar-toggler" type="button" data-toggle="collapse" data-target="#navigation" aria-controls="navbarTogglerDemo01" aria-expanded="false" aria-label="Toggle navigation">
                <span class="navbar-toggler-icon"></span>
            </button>
            <div class="collapse navbar-collapse " id="navigation">
                <a class="navbar-brand" href="/">Audiobooks</a>
                <ul class="navbar-nav mr-auto mt-2 mt-lg-0">
                    <li class="nav-item active">
                        <a class="nav-link" href="/">Home</a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link" asp-area="" asp-controller="Home" asp-action="Browse">Browse</a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link" asp-area="" asp-controller="Home" asp-action="Recommendations">Recommendations</a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link" asp-area="" asp-controller="Home" asp-action="RandomAudiobook">Random Audiobook</a>
                    </li>
                    <li class="nav-item dropdown">
                        <a class="nav-link dropdown-toggle" href="#" id="navbarDropdownMenuLink" data-toggle="dropdown" aria-haspopup="true" aria-expanded="false">
                            User
                        </a>
                        <div class="dropdown-menu" aria-labelledby="navbarDropdownMenuLink">
                            @if (User.IsInRole("Admin"))
                            {
                                <a class="dropdown-item text-dark" asp-area="Admin" asp-controller="Audiobooks" asp-action="Index">Admin</a>
                            }
                            @if (SignInManager.IsSignedIn(User))
                            {
                                <a class="dropdown-item text-dark" asp-area="Identity" asp-page="/Account/Manage/Index" title="Manage">Account</a>
                                <form class="form-inline" asp-area="Identity" asp-page="/Account/Logout" asp-route-returnUrl="@Url.Action("Index", "Home", new { area = "" })">
                                    <button type="submit" class="nav-link btn btn-link text-dark">Logout</button>
                                </form>
                            }
                            else
                            {
                                <a class="dropdown-item text-dark" asp-area="Identity" asp-page="/Account/Register">Register</a>
                                <a class="dropdown-item text-dark" asp-area="Identity" asp-page="/Account/Login">Login</a>
                            }

                        </div>
                    </li>

                </ul>
            </div>
        </nav>
    </div>
    
</header>






