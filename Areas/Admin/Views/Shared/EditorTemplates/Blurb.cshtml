@model Blurb

<div class="form-group">
    <label asp-for="AuthorName" class="control-label"></label>
    <select class="form-control" asp-for="AuthorName">
        <option value=""></option>
        @foreach (var item in await AudiobookService.GetAuthors())
        {
            <option value="@item">@item</option>
        }
    </select>
</div>

<div class="form-group">
    <label asp-for="BookSeries" class="control-label"></label>
    <select class="form-control" asp-for="BookSeries">
        <option value=""></option>
        @foreach (var item in await AudiobookService.GetBookSeries())
        {
            <option value="@item">@item</option>
        }
    </select>
</div>

<div class="form-group">
    <label asp-for="Description" class="control-label"></label>
    <input asp-for="Description" class="form-control" />
    <span asp-validation-for="Description" class="text-danger"></span>
</div>