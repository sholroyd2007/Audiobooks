@model BookNarrator

<div class="form-group">
    <label asp-for="AudiobookId" class="control-label"></label>
    <select class="form-control" asp-for="AudiobookId">
        <option value=""></option>
        @foreach (var item in await AudiobookService.GetAllAudiobooks())
        {
            <option value="@item.Id">@item.Name</option>
        }
    </select>
</div>

<div class="form-group">
    <label asp-for="NarratorId" class="control-label"></label>
    <select class="form-control" asp-for="NarratorId">
        <option value=""></option>
        @foreach (var item in await NarratorService.GetNarrators())
        {
            <option value="@item.Id">@item.Name</option>
        }
    </select>
</div>