@model Audiobooks.Models.Sample

@{
    ViewData["Title"] = "Details";
}

<h1>Details</h1>

<div>
    <h4>Sample</h4>
    <hr />
    <dl class="row">
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Audiobook)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Audiobook.Name)
        </dd>
    </dl>
    <div class="row">
        <div class="col-4">
            <audio controls>
                <source src="data:@Model.ContentType;base64, @Convert.ToBase64String(Model.Data)" type="audio/mpeg">
                Your browser does not support the audio tag.
            </audio>
        </div>
    </div>
</div>
<div>
    <a asp-action="Edit" asp-route-id="@Model.Id">Edit</a> |
    <a asp-action="Index">Back to List</a>
</div>
